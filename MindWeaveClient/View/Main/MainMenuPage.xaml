<Page x:Class="MindWeaveClient.View.Main.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Main"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="MainMenuPage"
      d:DataContext="{d:DesignInstance Type=vm:MainMenuViewModel, IsDesignTimeCreatable=True}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionContainerStyle" TargetType="Border">
            <Setter Property="Background" Value="#AAFFFFFF"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="MinHeight" Value="180"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="15" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock Text="{x:Static lang:Lang.GlobalLbGameName}" Foreground="#2c3e50" FontSize="80" FontWeight="ExtraBold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
            <TextBlock.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
            </TextBlock.Effect>
        </TextBlock>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,50,0" Width="200">
            <Ellipse Width="150" Height="150" Stroke="{StaticResource PrimaryColor}" StrokeThickness="4">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding PlayerAvatarPath}" Stretch="UniformToFill"/>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Text="{Binding PlayerUsername}" Foreground="#2c3e50" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,0"/>
            <Button Content="{x:Static lang:Lang.MainMenuBtnProfile}" Command="{Binding ProfileCommand}" Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">

                <Border Style="{StaticResource ActionContainerStyle}">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{x:Static lang:Lang.MainMenuBtnCreateLobby}" Foreground="#2c3e50" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <Button Content="{x:Static lang:Lang.GlobalBtnPlay}" Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding CreateLobbyCommand}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ActionContainerStyle}">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{x:Static lang:Lang.MainMenuLbJoinCodePrompt}"
                                   Foreground="#2c3e50" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <TextBox x:Name="lobbyCodeTextBox"
                                 Text="{Binding JoinLobbyCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                 Style="{StaticResource AuthInputBoxStyle}"
                                 MaxLength="6"
                                 HorizontalContentAlignment="Center" FontSize="18" FontWeight="Bold"
                                 Margin="0,0,0,5" />

                        <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                   Text="{Binding ElementName=lobbyCodeTextBox, Path=(Validation.Errors)[0].ErrorContent}"
                                   Margin="0,0,0,10"/>

                        <Button Content="{x:Static lang:Lang.MainMenuBtnJoin}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding JoinLobbyCommand}"
                                Height="45"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center">
                <Button Content="{x:Static lang:Lang.GlobalCommonSocial}"
                        Style="{StaticResource SecondaryButtonStyle}" Width="620"
                        Command="{Binding SocialCommand}"/>
                <Button Content="{x:Static lang:Lang.GlobalCommonSettings}"
                        Style="{StaticResource SecondaryButtonStyle}" Width="620"
                        Command="{Binding SettingsCommand}"/>
            </StackPanel>
        </StackPanel>

        <Border Background="#88000000" CornerRadius="10"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <TextBlock Text="{x:Static lang:Lang.GlobalProcessing}" Foreground="White" FontSize="16"/>
        </Border>

    </Grid>
</Page>