<Page x:Class="MindWeaveClient.View.Main.SelectionPuzzlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Main"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=vm:SelectionPuzzleViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="{x:Static lang:Lang.SelectionPuzzleTitle}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <SolidColorBrush x:Key="PrimaryColor" Color="#2980b9"/>
        <SolidColorBrush x:Key="PrimaryHoverColor" Color="#3498db"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <Style x:Key="PuzzleCardStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="GroupName" Value="PuzzleSelection"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid x:Name="CardContainer" Width="200" Height="220">
                            <Border x:Name="CardBorder" 
                                    CornerRadius="12" 
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="Transparent"
                                    BorderThickness="3">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="4" Opacity="0.15" Direction="270"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" CornerRadius="9,9,0,0" ClipToBounds="True">
                                        <Image Source="{Binding PuzzleImage}" Stretch="UniformToFill"/>
                                    </Border>

                                    <Border Grid.Row="1" Background="White" Padding="10" CornerRadius="0,0,9,9">
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="#333333" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   TextTrimming="CharacterEllipsis" 
                                                   TextAlignment="Center"/>
                                    </Border>

                                    <Border x:Name="SelectionOverlay" 
                                            Grid.RowSpan="2" 
                                            CornerRadius="12" 
                                            Background="Transparent" 
                                            BorderBrush="{StaticResource PrimaryColor}" 
                                            BorderThickness="4" 
                                            Visibility="Collapsed"/>
                                </Grid>
                            </Border>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="CardContainer" 
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                             To="1.05" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="CardContainer" 
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                             To="1.05" Duration="0:0:0.1"/>
                                            <ColorAnimation Storyboard.TargetName="CardBorder"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="{Binding Color, Source={StaticResource PrimaryHoverColor}}" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Grid.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="100" CenterY="110"/>
                            </Grid.RenderTransform>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SelectionOverlay" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CardBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{Binding Color, Source={StaticResource PrimaryColor}}" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#F2FFFFFF" CornerRadius="16"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="1100" Height="700"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="40" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="30,25,30,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="{x:Static lang:Lang.SelectionPuzzleTitle}"
                                   Foreground="{StaticResource PrimaryColor}" 
                                   FontSize="28" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{x:Static lang:Lang.SelectionPuzzleHeader}"
                                   Foreground="#7F8C8D" 
                                   FontSize="16" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="{x:Static lang:Lang.SelectionPuzzleUploadImageBtn}"
                            Command="{Binding UploadImageCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="20,8"
                            VerticalAlignment="Center"/>
                </Grid>

                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="#DDDDDD" Margin="30,0"/>

                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="20">
                    <ItemsControl ItemsSource="{Binding AvailablePuzzles}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Style="{StaticResource PuzzleCardStyle}"
                                             IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                             Command="{Binding DataContext.SelectPuzzleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                             CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="0,0,16,16" Padding="30,20" BorderBrush="#EEEEEE" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{x:Static lang:Lang.LobbyLbDifficulty}" 
                                       FontWeight="SemiBold" FontSize="16" 
                                       Foreground="#2c3e50" VerticalAlignment="Center" Margin="0,0,15,0"/>

                            <ComboBox SelectedIndex="{Binding SelectedDifficultyIndex, Mode=TwoWay}" Width="200" Height="35" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="{x:Static lang:Lang.DifficultyOptEasy}"/>
                                <ComboBoxItem Content="{x:Static lang:Lang.DifficultyOptMedium}"/>
                                <ComboBoxItem Content="{x:Static lang:Lang.DifficultyOptHard}"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="{x:Static lang:Lang.GlobalBtnCancel}"
                                    Command="{Binding CancelCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Width="140" Height="40"
                                    Margin="0,0,15,0"/>

                            <Button Content="{x:Static lang:Lang.SelectionPuzzleCreateLobbyBtn}"
                                    Command="{Binding ConfirmAndCreateLobbyCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    Width="200" Height="40"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" Background="#99000000" ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,0,0,20" Foreground="{StaticResource PrimaryColor}"/>
                <TextBlock Text="{x:Static lang:Lang.GlobalProcessing}" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Light"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>