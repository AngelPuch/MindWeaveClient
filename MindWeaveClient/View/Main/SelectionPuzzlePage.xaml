<Page x:Class="MindWeaveClient.View.Main.SelectionPuzzlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MindWeaveClient.View.Main"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Main"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:SelectionPuzzleViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="{x:Static lang:Lang.SelectionPuzzleTitle}"> <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="PuzzleItemStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="GroupName" Value="PuzzleSelection"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Width="150" Height="150" CornerRadius="10"
                                BorderBrush="Transparent" BorderThickness="3" Background="#55FFFFFF">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                            </Border.Effect>
                            <Grid>
                                <Image Source="{Binding imagePath}" Stretch="UniformToFill"/>
                                <Border Background="#AA000000" VerticalAlignment="Bottom" Padding="5">
                                    <TextBlock Text="{Binding name}" Foreground="White" TextTrimming="CharacterEllipsis" TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D8FFFFFF" CornerRadius="20"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                MaxWidth="1000" MaxHeight="650" Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{x:Static lang:Lang.SelectionPuzzleHeader}"
                           Foreground="#2c3e50" FontSize="32" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/> <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding availablePuzzles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Style="{StaticResource PuzzleItemStyle}"
                                                 IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                 Command="{Binding DataContext.SelectPuzzleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                 CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Grid.Column="1" Content="{x:Static lang:Lang.SelectionPuzzleUploadImageBtn}"
                            Command="{Binding uploadImageCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            VerticalAlignment="Top" Margin="20,10,0,0" Padding="10" Height="Auto"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/> <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{x:Static lang:Lang.GlobalBtnCancel}"
                                Command="{Binding cancelCommand}"
                                Style="{StaticResource SecondaryButtonStyle}" Width="160" Margin="0,0,10,0"/>
                        <Button Content="{x:Static lang:Lang.SelectionPuzzleCreateLobbyBtn}"
                                Command="{Binding confirmAndCreateLobbyCommand}"
                                Style="{StaticResource PrimaryButtonStyle}" Width="180"/>
                    </StackPanel>
                </Grid>

                <Border Grid.RowSpan="3" Background="#88000000" CornerRadius="10"
                        Visibility="{Binding isBusy, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static lang:Lang.GlobalProcessing}" Foreground="White" FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>