<Page x:Class="MindWeaveClient.View.Main.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="EditProfilePage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Page.Resources>

    

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D8FFFFFF"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="800"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{x:Static language:Lang.GlobalCommonEditProfile}"
                           Foreground="#2c3e50" FontSize="32" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,50,0">
                        <Border Width="180" Height="180" CornerRadius="90"
                                BorderBrush="{StaticResource PrimaryColor}" BorderThickness="4">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding avatarSource}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                        <Button Command="{Binding changeAvatarCommand}" Content="{x:Static language:Lang.EditProfileBtnChangeAvatar}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,20,0,10" Width="180" Height="40" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <Button Command="{Binding showChangePasswordCommand}" Content="{x:Static language:Lang.EditProfileBtnChangePassword}" Style="{StaticResource SecondaryButtonStyle}" Width="180" Height="40" Visibility="{Binding isChangePasswordSectionVisible, Converter={StaticResource InverseBoolToVis}}" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Visibility="{Binding isChangePasswordSectionVisible, Converter={StaticResource InverseBoolToVis}}">
                        <TextBlock Text="{x:Static language:Lang.GlobalLbFirstName}" Foreground="#34495e" FontSize="14" FontWeight="SemiBold" Margin="5,0,5,5"/>
                        <TextBox Text="{Binding firstName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource AuthInputBoxStyle}" Margin="0,0,0,15" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbLastName}" Foreground="#34495e" FontSize="14" FontWeight="SemiBold" Margin="5,0,5,5"/>
                        <TextBox Text="{Binding lastName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource AuthInputBoxStyle}" Margin="0,0,0,15" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbBirth}" Foreground="#34495e" FontSize="14" FontWeight="SemiBold" Margin="5,0,5,5"/>
                        <DatePicker SelectedDate="{Binding dateOfBirth}" Style="{StaticResource AuthDatePickerStyle}" Margin="0,0,0,15" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbGender}" Foreground="#34495e" FontSize="14" FontWeight="SemiBold" Margin="5,0,5,5"/>
                        <ComboBox ItemsSource="{Binding genders}"
                                  SelectedItem="{Binding selectedGender}"
                                  DisplayMemberPath="name"
                                  Height="45" Padding="10,5" Background="#22FFFFFF" BorderBrush="{StaticResource PrimaryColor}" BorderThickness="2" FontSize="16"
                                  Margin="0,0,0,25" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Visibility="{Binding isChangePasswordSectionVisible, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Current Password" Foreground="#34495e" FontSize="14" FontWeight="SemiBold" Margin="5,0,5,5"/>
                        <PasswordBox x:Name="pbCurrentPassword" helpers:PasswordBoxHelper.BoundPassword="{Binding currentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalTxtNewPassword}" Foreground="#34495e" FontSize="14" FontWeight="SemiBold" Margin="5,0,5,5"/>
                        <PasswordBox x:Name="pbNewPassword" helpers:PasswordBoxHelper.BoundPassword="{Binding newPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>

                        <TextBlock Text="{x:Static language:Lang.PasswordRecoveryLbConfirmPassword}" Foreground="#34495e" FontSize="14" FontWeight="SemiBold" Margin="5,0,5,5"/>
                        <PasswordBox x:Name="pbConfirmPassword" helpers:PasswordBoxHelper.BoundPassword="{Binding confirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,25" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Command="{Binding cancelChangePasswordCommand}" Content="{x:Static language:Lang.GlobalBtnCancel}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,5,0" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>
                            <Button Grid.Column="1" Command="{Binding saveNewPasswordCommand}" Content="{x:Static language:Lang.PasswordRecoveryBtnSave}" Style="{StaticResource PrimaryButtonStyle}" Margin="5,0,0,0" IsEnabled="{Binding canSaveNewPassword}"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="3" Margin="0,30,0,0" Visibility="{Binding isChangePasswordSectionVisible, Converter={StaticResource InverseBoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Command="{Binding cancelCommand}" Content="{x:Static language:Lang.GlobalBtnCancel}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" IsEnabled="{Binding isBusy, Converter={StaticResource InverseBoolConverter}}"/>
                    <Button Grid.Column="1" Command="{Binding saveChangesCommand}" Content="{x:Static language:Lang.EditProfileBtnSaveChanges}" Style="{StaticResource PrimaryButtonStyle}" Margin="10,0,0,0" IsEnabled="{Binding canSaveChanges}"/>
                </Grid>

                <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#88000000" CornerRadius="10"
                        Visibility="{Binding isBusy, Converter={StaticResource BoolToVis}}" >
                    <TextBlock Text="{x:Static language:Lang.GlobalProcessing}" Foreground="White" FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>