<Page x:Class="MindWeaveClient.View.Main.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="EditProfilePage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#CCFFFFFF" 
                CornerRadius="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="800">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{x:Static language:Lang.GlobalCommonEditProfile}" 
                           Grid.Row="0"
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="#2c3e50" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,40,0" VerticalAlignment="Top">
                        <Grid Width="200" Height="200">
                            <Border CornerRadius="100" BorderBrush="{StaticResource PrimaryColor}" BorderThickness="4">
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>
                            <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                                    Width="40" Height="40" Cursor="Hand" ToolTip="Cambiar avatar">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{StaticResource SecondaryColor}"/>
                                            <TextBlock Text="✏️" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbUsername}" Foreground="#2c3e50" Margin="0,20,0,5"/>
                        <TextBox Text="{Binding Username}" d:Text="Hyelo" Style="{StaticResource AuthInputBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{x:Static language:Lang.GlobalLbFirstName}" Foreground="#2c3e50" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding FirstName}" d:Text="Aldo Antonio" Style="{StaticResource AuthInputBoxStyle}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbLastName}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                        <TextBox Text="{Binding LastName}" d:Text="Campos" Style="{StaticResource AuthInputBoxStyle}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbBirth}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                        <DatePicker SelectedDate="{Binding BirthDate}" Style="{StaticResource AuthInputBoxStyle}"/>

                        <Button Content="{x:Static language:Lang.EditProfileBtnChangePassword}" 
                                Command="{Binding ChangePasswordCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,20,0,0"
                                HorizontalAlignment="Stretch" Width="Auto"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="0,30,0,0">
                    <Button Content="{x:Static language:Lang.GlobalBtnCancel}" 
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" 
                            HorizontalAlignment="Left"
                            Width="180"/>
                    <Button Content="{x:Static language:Lang.EditProfileBtnSaveChanges}" 
                            Command="{Binding SaveChangesCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" 
                            HorizontalAlignment="Right"
                            Width="180"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>