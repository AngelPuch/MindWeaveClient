<Page x:Class="MindWeaveClient.View.Main.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="EditProfilePage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="MinHeight" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D8FFFFFF"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="800"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="{x:Static language:Lang.GlobalCommonEditProfile}"
                           Foreground="#2c3e50" 
                           FontSize="32" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,50,0">
                        <Border Width="180" Height="180" 
                                CornerRadius="90"
                                BorderBrush="{StaticResource PrimaryColor}" 
                                BorderThickness="4">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                        <Button Command="{Binding ChangeAvatarCommand}" 
                                Content="{x:Static language:Lang.EditProfileBtnChangeAvatar}" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Margin="0,20,0,10" 
                                Width="180" 
                                Height="40" 
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <Button Command="{Binding ShowChangePasswordCommand}" 
                                Content="{x:Static language:Lang.EditProfileBtnChangePassword}" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                Width="180" 
                                Height="40" 
                                Visibility="{Binding IsChangePasswordSectionVisible, Converter={StaticResource InverseBoolToVis}}" 
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                                Visibility="{Binding IsChangePasswordSectionVisible, Converter={StaticResource InverseBoolToVis}}">

                        <TextBlock Text="{x:Static language:Lang.GlobalLbFirstName}" 
                                   Foreground="#34495e" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="5,0,5,5"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                 Style="{StaticResource AuthInputBoxStyle}" 
                                 Margin="0,0,0,0" 
                                 IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                   Text="{Binding FirstNameError}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbLastName}" 
                                   Foreground="#34495e" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="5,0,5,5"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                 Style="{StaticResource AuthInputBoxStyle}" 
                                 Margin="0,0,0,0" 
                                 IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                   Text="{Binding LastNameError}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalLbBirth}" 
                                   Foreground="#34495e" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="5,0,5,5"/>
                        <DatePicker SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                    Style="{StaticResource AuthDatePickerStyle}" 
                                    Margin="0,0,0,0" 
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                   Text="{Binding DateOfBirthError}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalCommonSocial}" 
                                   Foreground="#34495e" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="5,10,5,10"/>

                        <ItemsControl ItemsSource="{Binding SocialMediaList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" 
                                               Source="{Binding IconPath}" 
                                               Width="28" 
                                               Height="28" 
                                               Margin="0,0,10,5" 
                                               VerticalAlignment="Center"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               ToolTip="{Binding PlatformName}"/>

                                        <TextBox Grid.Column="1" 
                                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource AuthInputBoxStyle}" 
                                                 Tag="{Binding PlatformName}"
                                                 Margin="0">
                                        </TextBox>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                                Visibility="{Binding IsChangePasswordSectionVisible, Converter={StaticResource BoolToVis}}">

                        <TextBlock Text="{x:Static language:Lang.EditProfileLbCurrentPassword}" 
                                   Foreground="#34495e" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="5,0,5,5"/>
                        <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding CurrentPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                     Margin="0,0,0,0" 
                                     IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                   Text="{Binding CurrentPasswordError}"/>

                        <TextBlock Text="{x:Static language:Lang.GlobalTxtNewPassword}" 
                                   Foreground="#34495e" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="5,0,5,5"/>
                        <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                     Margin="0,0,0,0" 
                                     IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                   Text="{Binding NewPasswordError}"/>

                        <TextBlock Text="{x:Static language:Lang.PasswordRecoveryLbConfirmPassword}" 
                                   Foreground="#34495e" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="5,0,5,5"/>
                        <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                     Margin="0,0,0,0" 
                                     IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                        <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                   Text="{Binding ConfirmPasswordError}"
                                   Margin="0,2,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" 
                                    Command="{Binding CancelChangePasswordCommand}" 
                                    Content="{x:Static language:Lang.GlobalBtnCancel}" 
                                    Style="{StaticResource SecondaryButtonStyle}" 
                                    Margin="0,0,5,0" 
                                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding SaveNewPasswordCommand}" 
                                    Content="{x:Static language:Lang.PasswordRecoveryBtnSave}" 
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    Margin="5,0,0,0" 
                                    IsEnabled="{Binding CanSaveNewPassword}"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="3" 
                      Margin="0,30,0,0" 
                      Visibility="{Binding IsChangePasswordSectionVisible, Converter={StaticResource InverseBoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                            Command="{Binding CancelCommand}" 
                            Content="{x:Static language:Lang.GlobalBtnCancel}" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Margin="0,0,10,0" 
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
                    <Button Grid.Column="1" 
                            Command="{Binding SaveChangesCommand}" 
                            Content="{x:Static language:Lang.EditProfileBtnSaveChanges}" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10,0,0,0" 
                            IsEnabled="{Binding CanSaveChanges}"/>
                </Grid>

                <Border Grid.Row="1" 
                        Grid.ColumnSpan="2" 
                        Background="#88000000" 
                        CornerRadius="10"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" >
                    <TextBlock Text="{x:Static language:Lang.GlobalProcessing}" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>