<Window x:Class="MindWeaveClient.View.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindWeaveClient.View.Settings"
        xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
        mc:Ignorable="d"
        Title="{x:Static lang:Lang.GlobalCommonSettings}" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="WindowTitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <StackPanel>
                            <TextBlock Text="{TemplateBinding Header}" 
                                       Foreground="LightGray" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       TextDecorations="Underline"
                                       Margin="0,0,0,8"/>
                            <Border Background="#3C4A61" CornerRadius="8" Padding="15">
                                <ContentPresenter />
                            </Border>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelTextBlock" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#3C4A61"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="SwitchToggleButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" CornerRadius="12" Background="#5A5A5A">
                            <Ellipse x:Name="dot" Fill="White" HorizontalAlignment="Left" Width="20" Height="20" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="dot" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#2E3A4E">
        <StackPanel Margin="25">
            <TextBlock Text="{x:Static lang:Lang.GlobalCommonSettings}" Style="{StaticResource WindowTitleText}"/>

            <GroupBox Header="{x:Static lang:Lang.SettingsLbSound}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static lang:Lang.SettingsLbMusic}" Style="{StaticResource LabelTextBlock}"/>
                    <ToggleButton Grid.Row="0" Grid.Column="1" IsChecked="True" Style="{StaticResource SwitchToggleButton}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static lang:Lang.SettingsLbSoundEffects}" Style="{StaticResource LabelTextBlock}" Margin="0,15,0,15"/>
                    <ToggleButton Grid.Row="1" Grid.Column="1" IsChecked="True" Style="{StaticResource SwitchToggleButton}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static lang:Lang.SettingsLbVibration}" Style="{StaticResource LabelTextBlock}"/>
                    <ToggleButton Grid.Row="2" Grid.Column="1" IsChecked="False" Style="{StaticResource SwitchToggleButton}"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="{x:Static lang:Lang.SettingsLbGeneral}">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{x:Static lang:Lang.SettingsLbLanguage}" Style="{StaticResource LabelTextBlock}"/>
                        <ComboBox Grid.Column="1" SelectedIndex="0" Width="120" Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="{x:Static lang:Lang.SettingsOptEnglish}"/>
                            <ComboBoxItem Content="{x:Static lang:Lang.SettingsOptSpanish}"/>
                        </ComboBox>
                    </Grid>

                    <Button Content="{x:Static lang:Lang.SettingsBtnCredits}" Style="{StaticResource SecondaryButtonStyle}" Width="Auto" Height="Auto" Margin="0,5,0,5"/>
                    <Button Content="{x:Static lang:Lang.SettingsBtnReloadProgress}" Style="{StaticResource SecondaryButtonStyle}" Width="Auto" Height="Auto" Margin="0,5,0,5" Background="#C75252"/>
                </StackPanel>
            </GroupBox>

            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="{x:Static lang:Lang.GlobalBtnCancel}" Style="{StaticResource SecondaryButtonStyle}" Width="Auto" Height="40" Margin="0,0,5,0" Click="CancelButton_Click"/>
                <Button Grid.Column="1" Content="{x:Static lang:Lang.SettingsBtnSaveExit}" Style="{StaticResource PrimaryButtonStyle}" Width="Auto" Height="40" Margin="5,0,0,0" Click="SaveButton_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>