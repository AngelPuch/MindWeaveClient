<Page x:Class="MindWeaveClient.View.Main.SocialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Main"
      xmlns:local_vm="clr-namespace:MindWeaveClient.ViewModel.Main"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:SocialViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SocialPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryHoverColor}"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SocialListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#11000000"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <DataTemplate x:Key="FriendStatusTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Ellipse x:Name="statusIndicator" Width="12" Height="12">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding isOnline}" Value="True">
                                    <Setter Property="Fill" Value="LimeGreen"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <TextBlock Margin="5,0,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{x:Static language:Lang.SocialLbOffline}"/>
                            <Setter Property="Foreground" Value="Gray"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding isOnline}" Value="True">
                                    <Setter Property="Text" Value="{x:Static language:Lang.SocialLbOnline}"/>
                                    <Setter Property="Foreground" Value="LimeGreen"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#CCFFFFFF" CornerRadius="25"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="900" Height="600">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{x:Static language:Lang.GlobalCommonSocial}" Grid.Row="0" FontSize="42" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton GroupName="SocialTabs" Content="{x:Static language:Lang.SocialBtnFriendsList}" Style="{StaticResource TabButtonStyle}" IsChecked="{Binding IsFriendsListChecked, Mode=TwoWay}"/>
                    <RadioButton GroupName="SocialTabs" Content="{x:Static language:Lang.GlobalBtnAddFriend}" Style="{StaticResource TabButtonStyle}" IsChecked="{Binding IsAddFriendChecked, Mode=TwoWay}"/>
                    <RadioButton GroupName="SocialTabs" Content="{x:Static language:Lang.SocialBtnRequests}" Style="{StaticResource TabButtonStyle}" IsChecked="{Binding IsRequestsChecked, Mode=TwoWay}"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,20,0,0">

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{Binding IsFriendsListChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding FriendsList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local_vm:FriendDtoDisplay}">
                                    <Border Style="{StaticResource SocialListItemStyle}">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Ellipse Width="30" Height="30">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding avatarPath}" Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding username}" VerticalAlignment="Center" Margin="10,0" FontWeight="SemiBold" Foreground="#2c3e50"/>
                                            </StackPanel>

                                            <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource FriendStatusTemplate}" />

                                            <Button Content="X" ToolTip="Remove Friend"
                                                    Command="{Binding DataContext.RemoveFriendCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Background="#E74C3C" HorizontalAlignment="Right" VerticalAlignment="Center"
                                                    Width="35" Height="35" Margin="0,0,120,0" Padding="0" FontSize="16"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Grid Visibility="{Binding IsAddFriendChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource AuthInputBoxStyle}" Height="40" VerticalContentAlignment="Center"
                                     Margin="0,0,5,0"
                                     KeyDown="SearchTextBox_KeyDown"/>
                            <Button Grid.Column="1" Content="🔍"
                                    Command="{Binding SearchCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}" Height="40" Width="45" FontSize="18"/>
                        </Grid>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                            <ItemsControl ItemsSource="{Binding SearchResults}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource SocialListItemStyle}">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <Ellipse Width="30" Height="30">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding avatarPath}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <TextBlock Text="{Binding username}" VerticalAlignment="Center" Margin="10,0" FontWeight="SemiBold" Foreground="#2c3e50"/>
                                                </StackPanel>
                                                <Button Content="{x:Static language:Lang.GlobalBtnAddFriend}"
                                                        Command="{Binding DataContext.SendRequestCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource PrimaryButtonStyle}" Height="35" Width="120" Margin="0" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{Binding IsRequestsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="{x:Static language:Lang.SocialLbReceivedRequests}" FontSize="18" FontWeight="Bold" Foreground="#2c3e50"/>
                            <ItemsControl ItemsSource="{Binding ReceivedRequests}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource SocialListItemStyle}">
                                            <Grid>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                    <Ellipse Width="30" Height="30">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding avatarPath}" Stretch="UniformToFill"/>
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <TextBlock Text="{Binding requesterUsername}" VerticalAlignment="Center" Margin="10,0" FontWeight="SemiBold" Foreground="#2c3e50"/>
                                                    <TextBlock Text="{Binding requestDate, StringFormat='{}{0:dd MMM yyyy}'}" VerticalAlignment="Center" Margin="10,0" Foreground="Gray" FontStyle="Italic"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button Content="{x:Static language:Lang.SocialBtnAccept}"
                                                            Command="{Binding DataContext.AcceptRequestCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource PrimaryButtonStyle}" Height="35" Width="100" Margin="0,0,10,0"/>
                                                    <Button Content="{x:Static language:Lang.SocialBtnDecline}"
                                                            Command="{Binding DataContext.DeclineRequestCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource SecondaryButtonStyle}" Height="35" Width="100" Margin="0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Background="#88000000" CornerRadius="10"
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
                        <TextBlock Text="{x:Static language:Lang.GlobalProcessing}" Foreground="White" FontSize="16"/>
                    </Border>

                </Grid>

                <Button Grid.Row="3" Content="{x:Static language:Lang.GlobalBtnBack}"
                        Command="{Binding BackCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Left" Width="150" Margin="0,20,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Page>