<Page x:Class="MindWeaveClient.View.Main.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ProfilePage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding WelcomeMessage}"
                       d:Text="¡HOLA, HYELO!"
                       Foreground="#2c3e50" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="10" Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,40,0">
                    <Border Width="220" Height="220" CornerRadius="110" 
                            BorderBrush="{StaticResource PrimaryColor}" BorderThickness="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="20" Opacity="0.4"/>
                        </Border.Effect>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding AvatarSource}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>

                    <TextBlock Text="{Binding Username}"
                               d:Text="UsuarioDemo"
                               Foreground="#2c3e50" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.7*"/>
                        <ColumnDefinition Width="1.4*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <Border Background="#BFFFFFFF" CornerRadius="15" Padding="15" Margin="0,0,10,10">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="20" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="{x:Static language:Lang.ProfileLbPersonalInfo}" Foreground="#2c3e50" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static language:Lang.GlobalLbFirstName}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FirstName}" d:Text="Nombre" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static language:Lang.GlobalLbLastName}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastName}" d:Text="Apellido" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static language:Lang.GlobalLbBirth}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DateOfBirth}" d:Text="01/01/2000" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static language:Lang.GlobalLbGender}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Gender}" d:Text="Género" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Background="#CCFFFFFF" CornerRadius="15" Padding="15" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="20" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="{x:Static language:Lang.ProfileLbStats}" Foreground="#2c3e50" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbPuzzlesCompleted}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PuzzlesCompleted}" d:Text="10" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbPuzzlesWon}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PuzzlesWon}" d:Text="5" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbTotalPlaytime}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TotalPlaytime}" d:Text="5H 30m" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbHighestScore}" Foreground="#34495e" FontSize="14" Margin="2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding HighestScore}" d:Text="1500" Foreground="#2c3e50" FontSize="14" FontWeight="SemiBold" Margin="2"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#CCFFFFFF" CornerRadius="15" Padding="15" Margin="10,0,0,0" VerticalAlignment="Stretch">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="20" Opacity="0.2"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="{x:Static language:Lang.ProfileLbAchievements}" Foreground="#2c3e50" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding AchievementsList}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="180" Height="240" Margin="10" CornerRadius="12" Background="White" BorderThickness="3">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderBrush" Value="#BDC3C7"/>
                                                        <Setter Property="ToolTip" Value="{Binding Description}"/>
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="Black" ShadowDepth="3" BlurRadius="10" Opacity="0.2"/>
                                                            </Setter.Value>
                                                        </Setter>

                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUnlocked}" Value="True">
                                                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect Color="{Binding Color, Source={StaticResource PrimaryColor}}" 
                                                                                          ShadowDepth="0" BlurRadius="25" Opacity="0.6"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <Image Grid.Row="0" Source="{Binding IconPath}" Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Opacity" Value="0.3"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsUnlocked}" Value="True">
                                                                        <Setter Property="Opacity" Value="1.0"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>

                                                    <TextBlock Grid.Row="1" Text="{Binding Name}" 
                                                               TextWrapping="Wrap" 
                                                               TextAlignment="Center" 
                                                               FontSize="15" 
                                                               FontWeight="Bold"
                                                               Foreground="#2c3e50"
                                                               Margin="10,5,10,2"/>

                                                    <TextBlock Grid.Row="2" Text="{Binding Description}" 
                                                               TextWrapping="Wrap" 
                                                               TextAlignment="Center" 
                                                               FontSize="11" 
                                                               FontStyle="Italic"
                                                               Foreground="#7f8c8d"
                                                               Margin="10,0,10,15"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Button Command="{Binding BackCommand}"
                        Content="{x:Static language:Lang.GlobalBtnBack}" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Left"
                        Width="180"/>

                <Button Command="{Binding EditProfileCommand}"
                        Content="{x:Static language:Lang.GlobalCommonEditProfile}" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Right"
                        Width="180"/>
            </Grid>
        </Grid>
    </Grid>
</Page>