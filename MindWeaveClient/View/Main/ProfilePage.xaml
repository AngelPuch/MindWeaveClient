<Page x:Class="MindWeaveClient.View.Main.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ProfilePage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="lblWelcomeMessage"
                       Grid.Row="0"
                       Text="{Binding welcomeMessage}"
                       d:Text="¡HOLA, HYELO!"
                       Foreground="#2c3e50" 
                       FontSize="48" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="10" Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,50,0">
                    <Border Width="220" Height="220" CornerRadius="110" 
                            BorderBrush="{StaticResource PrimaryColor}" BorderThickness="5">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="20" Opacity="0.4"/>
                        </Border.Effect>
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding avatarSource}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <TextBlock x:Name="lblUsername" 
                               Text="{Binding username}"
                               d:Text="Hyelo"
                               Foreground="#2c3e50" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Border Background="#CCFFFFFF" CornerRadius="15" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="20" Opacity="0.2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="{x:Static language:Lang.ProfileLbStats}" Foreground="#2c3e50" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbPuzzlesCompleted}" Foreground="#34495e" FontSize="16" Margin="5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding puzzlesCompleted}" d:Text="125" Foreground="#2c3e50" FontSize="16" FontWeight="SemiBold" Margin="5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbPuzzlesWon}" Foreground="#34495e" FontSize="16" Margin="5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding puzzlesWon}" d:Text="20" Foreground="#2c3e50" FontSize="16" FontWeight="SemiBold" Margin="5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbTotalPlaytime}" Foreground="#34495e" FontSize="16" Margin="5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding totalPlaytime}" d:Text="45H 40m" Foreground="#2c3e50" FontSize="16" FontWeight="SemiBold" Margin="5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static language:Lang.ProfileLbHighestScore}" Foreground="#34495e" FontSize="16" Margin="5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding highestScore}" d:Text="1,000 pts" Foreground="#2c3e50" FontSize="16" FontWeight="SemiBold" Margin="5"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="#CCFFFFFF" CornerRadius="15" Padding="25" Margin="0,20,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="20" Opacity="0.2"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="{x:Static language:Lang.ProfileLbAchievements}" Foreground="#2c3e50" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                            <ItemsControl x:Name="icAchievements" ItemsSource="{Binding achievements}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding IconSource}" Width="50" Height="50" Margin="5" ToolTip="{Binding Name}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Button x:Name="btnBack" 
                        Command="{Binding backCommand}"
                        Content="{x:Static language:Lang.GlobalBtnBack}" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Left"
                        Width="180"/>

                <Button x:Name="btnEditProfile" 
                        Command="{Binding editProfileCommand}"
                        Content="{x:Static language:Lang.GlobalCommonEditProfile}" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Right"
                        Width="180"/>
            </Grid>
        </Grid>
    </Grid>
</Page>