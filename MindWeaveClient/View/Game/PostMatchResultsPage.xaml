<Page x:Class="MindWeaveClient.View.Game.PostMatchResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Game"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="PostMatchResultsPage">

    <Page.Resources>
        <!-- Convertidores EXISTENTES en tu proyecto -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style x:Key="PostMatchTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PostMatchBaseTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#34495e"/>
        </Style>

        <Style x:Key="PostMatchListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="#88FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2c3e50"/>
            <Setter Property="Foreground" Value="#34495e"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#D8FFFFFF"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Padding" Value="5,10"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D8FFFFFF" CornerRadius="25" Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="40" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{x:Static lang:Lang.PostMatchLbTitle}"
                           Style="{StaticResource PostMatchTitleStyle}"
                           Margin="0,0,0,15"/>

                <Grid Grid.Row="1" Margin="0,0,0,15">

                    <Border Background="#88FFFFFF"
                            BorderBrush="#2c3e50"
                            BorderThickness="1"
                            CornerRadius="15"
                            Padding="15"
                            Visibility="{Binding WinnerSectionVisibility}">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                            <TextBlock Text="{Binding ResultTitle}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryColor}"
                                       HorizontalAlignment="Center"/>

                            <Ellipse Width="80" Height="80" Margin="0,10,0,5" Stroke="#2c3e50" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Winner.AvatarPath}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <TextBlock Text="{Binding Winner.Username}"
                                       Style="{StaticResource PostMatchBaseTextStyle}"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>

                            <TextBlock HorizontalAlignment="Center" FontSize="18" Margin="0,5,0,0" Foreground="#34495e">
                                <Run Text="{Binding Winner.Score, Mode=OneWay}" FontWeight="Bold"/>
                                <Run Text="{x:Static lang:Lang.PostMatchLbScoreSuffix}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="#88E74C3C"
                            BorderBrush="#c0392b"
                            BorderThickness="2"
                            CornerRadius="15"
                            Padding="20"
                            Visibility="{Binding DrawSectionVisibility}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="⚖️" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding ResultTitle}"
                                       FontSize="28"
                                       FontWeight="ExtraBold"
                                       Foreground="#2c3e50"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Nadie logró puntos."
                                       FontSize="16"
                                       Foreground="#34495e"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="2"
                        Background="#88FFFFFF"
                        BorderBrush="#2c3e50"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,0,0,15">

                    <ListView ItemsSource="{Binding AllParticipants}"
                              Style="{StaticResource PostMatchListViewStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              HorizontalContentAlignment="Stretch">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="{x:Static lang:Lang.PostMatchHeaderRank}" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FinalRank}" 
                                                       Style="{StaticResource PostMatchBaseTextStyle}" 
                                                       HorizontalAlignment="Center"
                                                       FontSize="18" FontWeight="Bold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static lang:Lang.PostMatchHeaderPlayer}" Width="280">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="30" Height="30" Margin="0,0,10,0">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding AvatarPath}" Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding Username}"
                                                           Style="{StaticResource PostMatchBaseTextStyle}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static lang:Lang.InGameLbScore}"
                                                DisplayMemberBinding="{Binding Score}"
                                                Width="100"/>

                                <GridViewColumn Header="{x:Static lang:Lang.PostMatchHeaderPieces}"
                                                DisplayMemberBinding="{Binding PiecesPlaced}"
                                                Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <!-- SECCIÓN DE BOTONES - Usando TUS Helpers Existentes -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,5,0,0">

                    <!-- Botón MENÚ PRINCIPAL (solo visible para jugadores NO invitados) -->
                    <Button Content="{x:Static lang:Lang.PostMatchBtnMainMenu}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding GoToMainMenuCommand}"
                            Visibility="{Binding IsGuest, Converter={StaticResource InverseBoolToVis}}"
                            Width="180" Height="40"
                            Margin="5"/>

                    <!-- Botón SALIR (solo visible para jugadores invitados) -->
                    <Button Content="{x:Static lang:Lang.GlobalBtnExit}"
                            Command="{Binding ExitToLoginCommand}"
                            Visibility="{Binding IsGuest, Converter={StaticResource BoolToVis}}"
                            Width="180" Height="40"
                            Margin="5">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                <Setter Property="Background" Value="#E74C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>