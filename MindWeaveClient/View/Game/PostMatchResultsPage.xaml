<Page x:Class="MindWeaveClient.View.Game.PostMatchResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Game"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="PostMatchResultsPage">

    <Page.Resources>
        <Style x:Key="PostMatchTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PostMatchBaseTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#34495e"/>
        </Style>

        <Style x:Key="PostMatchListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="#88FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2c3e50"/>
            <Setter Property="Foreground" Value="#34495e"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#D8FFFFFF"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Fondo del juego -->
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Contenedor principal -->
        <Border Background="#D8FFFFFF" CornerRadius="25" Margin="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="40" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0"
                           Text="{x:Static lang:Lang.PostMatchLbTitle}"
                           Style="{StaticResource PostMatchTitleStyle}"
                           Margin="0,0,0,25"/>

                <!-- Ganador -->
                <Border Grid.Row="1"
                        Background="#88FFFFFF"
                        BorderBrush="#2c3e50"
                        BorderThickness="1"
                        CornerRadius="15"
                        Padding="25"
                        Margin="0,0,0,25">
                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">

                        <TextBlock Text="{x:Static lang:Lang.PostMatchLbWinner}"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryColor}"
                                   HorizontalAlignment="Center"/>

                        <Ellipse Width="90" Height="90" Margin="0,15,0,5" Stroke="#2c3e50" StrokeThickness="1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding Winner.AvatarPath}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <TextBlock Text="{Binding Winner.Username}"
                                   Style="{StaticResource PostMatchBaseTextStyle}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>

                        <TextBlock HorizontalAlignment="Center" FontSize="20" Margin="0,5,0,0"
                                   Foreground="#34495e">
                            <Run Text="{Binding Winner.Score, Mode=OneWay}" FontWeight="Bold"/>
                            <Run Text="{x:Static lang:Lang.PostMatchLbScoreSuffix}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Lista de participantes -->
                <Border Grid.Row="2"
                        Background="#88FFFFFF"
                        BorderBrush="#2c3e50"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15"
                        Margin="0,0,0,25">
                    <ListView ItemsSource="{Binding AllParticipants}"
                              Style="{StaticResource PostMatchListViewStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              HorizontalContentAlignment="Stretch"
                              MaxHeight="300">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="{x:Static lang:Lang.PostMatchHeaderRank}" Width="70">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FinalRank}" 
                                                       Style="{StaticResource PostMatchBaseTextStyle}" 
                                                       HorizontalAlignment="Center"
                                                       FontSize="18" FontWeight="Bold"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static lang:Lang.PostMatchHeaderPlayer}" Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="35" Height="35" Margin="0,0,10,0">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding AvatarPath}" Stretch="UniformToFill"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock Text="{Binding Username}"
                                                           Style="{StaticResource PostMatchBaseTextStyle}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="{x:Static lang:Lang.InGameLbScore}"
                                                DisplayMemberBinding="{Binding Score}"
                                                Width="120"/>

                                <GridViewColumn Header="{x:Static lang:Lang.PostMatchHeaderPieces}"
                                                DisplayMemberBinding="{Binding PiecesPlaced}"
                                                Width="120"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <!-- Botones -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,25,0,0">

                    <Button Content="{x:Static lang:Lang.PostMatchBtnBackToLobby}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding BackToLobbyCommand}"
                            Width="200" Height="45"/>

                    <Button Content="{x:Static lang:Lang.PostMatchBtnMainMenu}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding GoToMainMenuCommand}"
                            Width="200" Height="45"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
