<Page x:Class="MindWeaveClient.View.Game.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
      xmlns:local="clr-namespace:MindWeaveClient.View.Game"
      xmlns:viewModel="clr-namespace:MindWeaveClient.ViewModel.Game"
      xmlns:puzzleVM="clr-namespace:MindWeaveClient.ViewModel.Puzzle"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=viewModel:GameViewModel}"
      Title="Mind Weave - In Game">

    <Page.Resources>
        <controls:BooleanToVisibilityConverter x:Key="BoolToVis" />

        <SolidColorBrush x:Key="Player1Color" Color="#3498DB"/>
        <SolidColorBrush x:Key="Player2Color" Color="#E74C3C"/>
        <SolidColorBrush x:Key="Player3Color" Color="#2ECC71"/>
        <SolidColorBrush x:Key="Player4Color" Color="#F1C40F"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#85C1E9"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#D8FFFFFF"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource PanelBackground}" Margin="20,20,20,10" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ItemsControl Grid.Column="0" ItemsSource="{Binding PlayerScores}" HorizontalAlignment="Left" Margin="10">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModel:PlayerScoreViewModel}">
                                <Border Background="#2E3A4E" 
                                        BorderBrush="{StaticResource Player1Color}" 
                                        BorderThickness="2" 
                                        CornerRadius="25" 
                                        Padding="15,8" 
                                        Margin="5,0">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="30" Height="30" Fill="{StaticResource Player1Color}"/>
                                        <TextBlock Text="{Binding Username}" 
                                                   Foreground="White" 
                                                   FontWeight="Bold" 
                                                   VerticalAlignment="Center" 
                                                   Margin="10,0,0,0"
                                                   FontSize="14"/>
                                        <TextBlock Foreground="LightGray" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="13">
                                            <TextBlock.Text>
                                                <Binding Path="Score" StringFormat="{}{0} pts" />
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,10" VerticalAlignment="Center">
                        <Border Background="#1A1A1A" CornerRadius="10" Padding="25,12" Margin="0,0,15,0" MinWidth="120">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⏱" FontSize="24" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding TimeDisplay}" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           FontSize="24"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#1A1A1A" CornerRadius="10" Padding="25,12" MinWidth="120">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⭐" FontSize="24" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                                <TextBlock Foreground="White" FontWeight="Bold" VerticalAlignment="Center" FontSize="24">
                                    <TextBlock.Text>
                                        <Binding Path="MyPlayer.Score" StringFormat="{}{0}" />
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="{StaticResource PanelBackground}"
                        CornerRadius="15"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Padding="20">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                    </Border.Effect>

                    <Viewbox Stretch="Uniform">
                        <Grid Width="{Binding PuzzleWidth}" Height="{Binding PuzzleHeight}">

                            <ItemsControl ItemsSource="{Binding PuzzleSlots}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Width="{Binding PuzzleWidth}" 
                                                Height="{Binding PuzzleHeight}" 
                                                Background="#222222"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="{Binding Width}" 
                                                Height="{Binding Height}"
                                                BorderBrush="#33FFFFFF" 
                                                BorderThickness="1"
                                                Background="#10FFFFFF"
                                                SnapsToDevicePixels="True"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>

                            <ItemsControl x:Name="PuzzleItemsControl" ItemsSource="{Binding PiecesCollection}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas x:Name="PuzzleCanvas" 
                                                Width="{Binding PuzzleWidth}"
                                                Height="{Binding PuzzleHeight}"
                                                Background="Transparent"
                                                ClipToBounds="False"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type puzzleVM:PuzzlePieceViewModel}">
                                        <local:PuzzlePieceView 
                                            DataContext="{Binding}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="Piece_MouseLeftButtonDown"
                                            MouseMove="Piece_MouseMove"
                                            MouseLeftButtonUp="Piece_MouseLeftButtonUp" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>

                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                        <Setter Property="Panel.ZIndex" Value="{Binding ZIndex}" />
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <TranslateTransform X="0" Y="0" />
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Grid>
                    </Viewbox>
                </Border>

            </Grid>

            <Border Grid.RowSpan="2" 
                    Background="#CC000000" 
                    CornerRadius="20" 
                    Padding="30"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Visibility="{Binding IsBonusVisible, Converter={StaticResource BoolToVis}}"
                    IsHitTestVisible="False" 
                    Panel.ZIndex="200">

                <TextBlock Text="{Binding BonusNotification}" 
                           Foreground="{Binding NotificationColor}" 
                           FontSize="48" 
                           FontWeight="ExtraBold"
                           TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="2"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

        </Grid>
    </Grid>
</Page>