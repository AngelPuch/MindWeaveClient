<Page x:Class="MindWeaveClient.View.Game.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      
      xmlns:local="clr-namespace:MindWeaveClient.View.Game"
      xmlns:viewModel="clr-namespace:MindWeaveClient.ViewModel.Game"
      xmlns:puzzleVM="clr-namespace:MindWeaveClient.ViewModel.Puzzle"

      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=viewModel:GameViewModel}"
      Title="Mind Weave - In Game">

    <Page.Resources>
        <SolidColorBrush x:Key="Player1Color" Color="#3498DB"/>
        <SolidColorBrush x:Key="Player2Color" Color="#E74C3C"/>
        <SolidColorBrush x:Key="Player3Color" Color="#2ECC71"/>
        <SolidColorBrush x:Key="Player4Color" Color="#F1C40F"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#85C1E9"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#A52E3A4E" Margin="20,20,20,0" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                </Border.Effect>

                <ItemsControl ItemsSource="{Binding PlayerScores}" HorizontalAlignment="Center" Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModel:PlayerScoreViewModel}">
                            <Border Background="#2E3A4E" 
                                    BorderBrush="{StaticResource Player1Color}" 
                                    BorderThickness="2" 
                                    CornerRadius="25" 
                                    Padding="15,8" 
                                    Margin="10,0" 
                                    MinWidth="150">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Fill="{StaticResource Player1Color}"/>
                                    <TextBlock Text="{Binding Username}" 
                                               Foreground="White" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center" 
                                               Margin="10,0,0,0"/>
                                    <TextBlock Foreground="Gray" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0">
                                        <TextBlock.Text>
                                            <Binding Path="Score" StringFormat="{}{0} pts" />
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#A52E3A4E" CornerRadius="15"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                    </Border.Effect>

                    <ItemsControl x:Name="PuzzleItemsControl" ItemsSource="{Binding PiecesCollection}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas x:Name="PuzzleCanvas" 
                                        Width="{Binding PuzzleWidth}"
                                        Height="{Binding PuzzleHeight}"
                                        Background="#222"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type puzzleVM:PuzzlePieceViewModel}">
                                <local:PuzzlePieceView 
                                    DataContext="{Binding}"
                                    Cursor="Hand"
                                    
                                    MouseLeftButtonDown="Piece_MouseLeftButtonDown"
                                    MouseMove="Piece_MouseMove"
                                    MouseLeftButtonUp="Piece_MouseLeftButtonUp" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                <Setter Property="Panel.ZIndex" Value="{Binding ZIndex}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                    </ItemsControl>
                </Border>

                <StackPanel Grid.Column="1" Margin="20,0,0,0">

                    <Border Background="#A52E3A4E" CornerRadius="15" Padding="20" Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Lang.InGameLbTime}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <Viewbox Stretch="Uniform" Height="80">
                                <TextBlock Text="05:30" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold"/>
                            </Viewbox>
                        </StackPanel>
                    </Border>

                    <Border Background="#A52E3A4E" CornerRadius="15" Padding="20" Margin="0,10,0,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Lang.InGameLbScore}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <Viewbox Stretch="Uniform" Height="80">
                                <TextBlock Foreground="{StaticResource PrimaryColor}" FontWeight="Bold">
                                    <TextBlock.Text>
                                        <Binding Path="MyPlayer.Score" StringFormat="{}{0} pts" />
                                    </TextBlock.Text>
                                </TextBlock>
                            </Viewbox>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>