<Page x:Class="MindWeaveClient.View.Game.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MindWeaveClient.View.Game"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Game"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers" mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:LobbyViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="LobbyPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <helpers:DifficultyIndexConverter x:Key="DifficultyIndexConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="10,5">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="PlayerListItemStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <DataTemplate x:Key="PlayerListDataTemplate">
            <Grid Style="{StaticResource PlayerListItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Text="{Binding}" Foreground="#2c3e50" VerticalAlignment="Center" Margin="5,0"/>
                <TextBlock Grid.Column="2" Text="👑" ToolTip="Host" FontSize="16" VerticalAlignment="Center" Margin="5,0,10,0">
                    <TextBlock.Visibility>
                        <MultiBinding Converter="{StaticResource StringToVisibilityConverter}">
                            <Binding Path="DataContext.hostUsername" RelativeSource="{RelativeSource AncestorType=Page}"/>
                            <Binding/>
                        </MultiBinding>
                    </TextBlock.Visibility>
                </TextBlock>
            </Grid>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D8FFFFFF" CornerRadius="25" Margin="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="40" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <Border Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" MinHeight="400" VerticalAlignment="Stretch">
                        <TextBlock Text="[Image Preview Area]" Foreground="Gray" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Button Content="{x:Static lang:Lang.LobbyBtnUploadImage}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,15,0,0" Width="Auto" Height="40"
                            Command="{Binding uploadImageCommand}"
                            IsEnabled="{Binding isHost}"/>
                </StackPanel>

                <Grid Grid.Column="1" Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{x:Static lang:Lang.LobbyLbTitle}" Foreground="#2c3e50" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                        <TextBlock Text="Code:" Foreground="#2c3e50" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding lobbyCode, Mode=OneWay}" IsReadOnly="True" FontWeight="Bold" FontSize="18" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="{x:Static lang:Lang.LobbyLbDifficulty}" Foreground="#2c3e50" FontWeight="Bold"/>
                        <ComboBox SelectedIndex="{Binding currentSettings.difficultyId, Converter={StaticResource DifficultyIndexConverter}}" Padding="5" Margin="0,5,0,0" IsEnabled="{Binding isHost}">
                            <ComboBoxItem Content="Easy (25 Pcs)" Tag="1"/>
                            <ComboBoxItem Content="Medium (50 Pcs)" Tag="2"/>
                            <ComboBoxItem Content="Hard (100 Pcs)" Tag="3"/>
                        </ComboBox>
                    </StackPanel>
                    <Border Grid.Row="3" Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Lang.LobbyLbPlayers}" Foreground="#2c3e50" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                                <ItemsControl ItemsSource="{Binding players}" ItemTemplate="{StaticResource PlayerListDataTemplate}"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                    <Button Grid.Row="4" Content="{x:Static lang:Lang.GlobalBtnPlay}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,15,0,0" Height="50" FontSize="20" Command="{Binding startGameCommand}" Visibility="{Binding isHost, Converter={StaticResource BoolToVis}}"/>
                    <Button Grid.Row="4" Content="Leave Lobby" Style="{StaticResource SecondaryButtonStyle}" Background="DarkRed" Margin="0,15,0,0" Height="50" FontSize="20" Command="{Binding leaveLobbyCommand}" Visibility="{Binding isHost, Converter={StaticResource InverseBoolToVis}}"/>
                </Grid>

                <Border Grid.Column="2" Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" Margin="20,0,0,0">
                    <TabControl Background="Transparent" BorderThickness="0">
                        <TabItem Header="{x:Static lang:Lang.LobbyBtnInvite}" IsEnabled="{Binding isHost}">
                            <StackPanel Margin="15">
                                <TextBlock Text="Invite Friends:" FontWeight="SemiBold"/>
                                <TextBox Text="{x:Static lang:Lang.LobbyTxtSearchFriends}" Padding="5" Margin="0,10,0,0"/>
                                <ListBox Background="Transparent" BorderThickness="0" Foreground="#2c3e50" Margin="0,10,0,0">
                                    <ListBoxItem Content="Friend1 (Online)"/>
                                    <ListBoxItem Content="Friend2 (Online)"/>
                                </ListBox>
                                <Button Content="Invite Selected" Style="{StaticResource SecondaryButtonStyle}" Height="35" Margin="0,10,0,0"/>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="{x:Static lang:Lang.LobbyLbChat}">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Background="#44FFFFFF" Text="Hyelo: Subscribe to Hyelo!"/>
                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="Type a message..."/>
                                    <Button Grid.Column="1" Content="Send" Margin="5,0,0,0" Style="{StaticResource SecondaryButtonStyle}" Height="Auto" Width="Auto"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </Border>

        <Border Background="#88000000" CornerRadius="10"
                Visibility="{Binding isBusy, Converter={StaticResource BoolToVis}}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <TextBlock Text="Processing..." Foreground="White" FontSize="16"/>
        </Border>
    </Grid>
</Page>