<Page x:Class="MindWeaveClient.View.Game.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MindWeaveClient.View.Game"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Game"
      xmlns:main_vm="clr-namespace:MindWeaveClient.ViewModel.Main"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      xmlns:services="clr-namespace:MindWeaveClient.Services" mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:LobbyViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="LobbyPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <helpers:KickButtonVisibilityConverter x:Key="KickButtonVisibilityConverter"/>
        <helpers:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter"/>
        <helpers:StringEqualityConverter x:Key="StringEqualityConverter"/>
        <helpers:StringEqualityToVisibilityConverterInverted x:Key="StringEqualityToVisibilityConverterInverted"/>
        <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="10,5">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="PlayerListItemStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <DataTemplate x:Key="PlayerListDataTemplate">
            <Grid Style="{StaticResource PlayerListItemStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="👑" ToolTip="Host" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0">
                    <TextBlock.Visibility>
                        <MultiBinding Converter="{StaticResource StringToVisibilityConverter}">
                            <Binding Path="DataContext.HostUsername" RelativeSource="{RelativeSource AncestorType=Page}"/>
                            <Binding/>
                        </MultiBinding>
                    </TextBlock.Visibility>
                </TextBlock>
                <TextBlock Grid.Column="1" Text="{Binding}" Foreground="#2c3e50" VerticalAlignment="Center" Margin="5,0"/>
                <Button Grid.Column="2" Content="Kick" ToolTip="Kick Player"
                        Style="{StaticResource SecondaryButtonStyle}" Background="OrangeRed"
                        Height="25" Width="50" FontSize="10" Padding="0" Margin="5,0,0,0"
                        Command="{Binding DataContext.KickPlayerCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}">
                    <Button.Visibility>
                        <MultiBinding Converter="{StaticResource KickButtonVisibilityConverter}">
                            <Binding Path="DataContext.IsHost" RelativeSource="{RelativeSource AncestorType=Page}"/>
                            <Binding/>
                            <Binding Path="DataContext.HostUsername" RelativeSource="{RelativeSource AncestorType=Page}"/>
                        </MultiBinding>
                    </Button.Visibility>
                </Button>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="OnlineFriendInviteTemplate">
            <Border Background="#19000000" CornerRadius="5" Padding="8" Margin="0,3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" Width="25" Height="25">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding AvatarPath}" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Grid.Column="1" Text="{Binding Username}" VerticalAlignment="Center" Margin="8,0" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Button Grid.Column="2" Content="Invite" ToolTip="Invite to Lobby"
                            Style="{StaticResource PrimaryButtonStyle}" Height="28" Width="60" FontSize="10" Padding="0" Margin="0"
                            Command="{Binding DataContext.InviteFriendCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding DataContext.IsHost, RelativeSource={RelativeSource AncestorType=Page}}"/>
                </Grid>
            </Border>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D8FFFFFF" CornerRadius="25" Margin="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="40" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="0,0,20,0" 
                        Background="#88FFFFFF" BorderBrush="#2c3e50" 
                        BorderThickness="1" CornerRadius="10">
                    <Image Source="{Binding PuzzleImage}" Stretch="Uniform" />
                </Border>
                <Grid Grid.Column="1" Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{x:Static lang:Lang.LobbyLbTitle}" Foreground="#2c3e50" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,10">
                        <TextBlock Text="Code:" Foreground="#2c3e50" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding LobbyCode, Mode=OneWay}" IsReadOnly="True" FontWeight="Bold" FontSize="18" BorderThickness="0" Background="Transparent" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Row="2" Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Lang.LobbyLbPlayers}" Foreground="#2c3e50" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                                <ItemsControl ItemsSource="{Binding Players}" ItemTemplate="{StaticResource PlayerListDataTemplate}"/>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <Button Grid.Row="3" Content="{x:Static lang:Lang.GlobalBtnPlay}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,15,0,0" Height="50" FontSize="20" Command="{Binding StartGameCommand}" Visibility="{Binding IsHost, Converter={StaticResource BoolToVis}}"/>
                    <Button Grid.Row="3" Content="Leave Lobby" Style="{StaticResource SecondaryButtonStyle}" Background="DarkRed" Margin="0,15,0,0" Height="50" FontSize="20" Command="{Binding LeaveLobbyCommand}" Visibility="{Binding IsHost, Converter={StaticResource InverseBoolToVis}}"/>
                </Grid>

                <Border Grid.Column="2" Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" Margin="20,0,0,0">
                    <TabControl Background="Transparent" BorderThickness="0">

                        <TabItem Header="{x:Static lang:Lang.LobbyBtnInvite}" IsEnabled="{Binding IsHost}">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="107*"/>
                                    <ColumnDefinition Width="131*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Invite Online Friends:" FontWeight="SemiBold" Foreground="#2c3e50" Grid.ColumnSpan="2" Margin="0,0,0,393" Grid.RowSpan="2"/>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10" Grid.ColumnSpan="2">
                                    <ItemsControl ItemsSource="{Binding OnlineFriends}" ItemTemplate="{StaticResource OnlineFriendInviteTemplate}"/>
                                </ScrollViewer>
                                <Button Grid.Row="2" 
                                        Content="{x:Static lang:Lang.LobbyBtnRefreshFriends}"
                                        Style="{StaticResource SecondaryButtonStyle}" 
                                        Height="30" FontSize="12" Padding="5,0" 
                                        Command="{Binding RefreshFriendsCommand}" Grid.ColumnSpan="2" Margin="19,20,19,20" />

                                <Button Grid.Row="3"
                                        Content="{x:Static lang:Lang.LobbyBtnInviteGuest}"
                                        Command="{Binding InviteGuestCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="19,10,19,0" Height="35" FontSize="12" Padding="5,0" Grid.ColumnSpan="2"/>

                            </Grid>
                        </TabItem>

                        <TabItem Header="{x:Static lang:Lang.LobbyLbChat}">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <ScrollViewer Grid.Row="0" x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Background="#44FFFFFF">
                                    <ItemsControl ItemsSource="{Binding ChatMessages}">
                                        <ItemsControl.ItemTemplate>


                                            <DataTemplate DataType="{x:Type vm:ChatMessageDisplayViewModel}">
                                                <Border Background="#22000000" CornerRadius="5" Padding="8,5" Margin="5" HorizontalAlignment="{Binding Alignment}" MaxWidth="300">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding SenderUsername}" FontWeight="Bold" Foreground="#1A5276" Visibility="{Binding Alignment, ConverterParameter=Left, Converter={StaticResource EqualityToVisibilityConverter}}"/>
                                                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Foreground="#34495E" Margin="0,2,0,2"/>

                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,3,0,0">
                                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                                                   FontSize="10" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>


                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0" Text="{Binding CurrentChatMessage, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource AuthInputBoxStyle}" Height="35" VerticalContentAlignment="Center"
                                             MaxLength="200"
                                             AcceptsReturn="False">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                    <Button Grid.Column="1" Content="Send" Margin="5,0,0,0"
                                            Style="{StaticResource PrimaryButtonStyle}" Height="35" Width="60"
                                            Command="{Binding SendMessageCommand}"/>
                                </Grid>
                            </Grid>
                        </TabItem>

                    </TabControl>
                </Border>
            </Grid>
        </Border>

        <Border Background="#88000000" CornerRadius="10"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <TextBlock Text="{x:Static lang:Lang.GlobalProcessing}" Foreground="White" FontSize="16"/>
        </Border>
    </Grid>
</Page>