<Page x:Class="MindWeaveClient.View.Game.LobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MindWeaveClient.View.Game"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="LobbyPage">

    <Page.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Padding="10,5">
                            <ContentPresenter ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#D8FFFFFF" CornerRadius="25" Margin="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="40" Opacity="0.5"/>
            </Border.Effect>

            <Grid Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <Border Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" MinHeight="400" VerticalAlignment="Stretch">
                        <TextBlock Text="[Image Preview Area]" Foreground="Gray" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Button Content="{x:Static lang:Lang.LobbyBtnUploadImage}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,15,0,0" Width="Auto" Height="40" Command="{Binding UploadImageCommand}"/>
                </StackPanel>

                <Grid Grid.Column="1" Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{x:Static lang:Lang.LobbyLbTitle}" Foreground="#2c3e50" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                        <TextBlock Text="{x:Static lang:Lang.LobbyLbDifficulty}" Foreground="#2c3e50" FontWeight="Bold"/>
                        <ComboBox SelectedIndex="0" Padding="5" Margin="0,5,0,0">
                            <ComboBoxItem Content="Easy (25 Pcs)"/>
                            <ComboBoxItem Content="Medium (50 Pcs)"/>
                            <ComboBoxItem Content="Hard (100 Pcs)"/>
                        </ComboBox>
                    </StackPanel>

                    <Border Grid.Row="2" Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Lang.LobbyLbPlayers}" Foreground="#2c3e50" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="1." FontWeight="Bold" Foreground="#2c3e50" VerticalAlignment="Center" Margin="5,10"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Hyelo..." Foreground="#2c3e50" VerticalAlignment="Center" Margin="5,10"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="2." FontWeight="Bold" Foreground="#2c3e50" VerticalAlignment="Center" Margin="5,10"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="Puch..." Foreground="#2c3e50" VerticalAlignment="Center" Margin="5,10"/>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="3." FontWeight="Bold" Foreground="Gray" VerticalAlignment="Center" Margin="5,10"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Static lang:Lang.LobbyLbWaiting}" Foreground="Gray" FontStyle="Italic" VerticalAlignment="Center" Margin="5,10"/>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="4." FontWeight="Bold" Foreground="Gray" VerticalAlignment="Center" Margin="5,10"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{x:Static lang:Lang.LobbyLbWaiting}" Foreground="Gray" FontStyle="Italic" VerticalAlignment="Center" Margin="5,10"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <Button Grid.Row="3" Content="{x:Static lang:Lang.GlobalBtnPlay}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,20,0,0" Height="60" FontSize="24" Command="{Binding StartGameCommand}"/>
                </Grid>
                <Border Grid.Column="2" Background="#88FFFFFF" BorderBrush="#2c3e50" BorderThickness="1" CornerRadius="10" Margin="20,0,0,0">
                    <TabControl Background="Transparent" BorderThickness="0">
                        <TabItem Header="{x:Static lang:Lang.SocialBtnFriendsList}">
                            <StackPanel Margin="15">
                                <TextBox Text="{x:Static lang:Lang.SocialLbSearch}" Padding="5"/>
                                <ListBox Background="Transparent" BorderThickness="0" Foreground="#2c3e50" Margin="0,10,0,0">
                                    <ListBoxItem Content="Player123 (Online)"/>
                                    <ListBoxItem Content="NoobMaster69 (Online)"/>
                                </ListBox>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="{x:Static lang:Lang.LobbyLbChat}">
                            <Grid Margin="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Background="#44FFFFFF" Text="Hyelo: Subscribe to Hyelo!"/>
                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="Type a message..."/>
                                    <Button Grid.Column="1" Content="Send" Margin="5,0,0,0" Style="{StaticResource SecondaryButtonStyle}" Height="Auto" Width="Auto"/>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>