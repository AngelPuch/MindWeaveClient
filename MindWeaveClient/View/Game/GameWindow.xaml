<Window x:Class="MindWeaveClient.View.Game.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindWeaveClient.View.Game"
        xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
        mc:Ignorable="d"
        Title="Mind Weave - In Game" Height="720" Width="1280"
        WindowStyle="None" WindowState="Maximized">

    <Window.Resources>
        <SolidColorBrush x:Key="Player1Color" Color="#3498DB"/>
        <SolidColorBrush x:Key="Player2Color" Color="#E74C3C"/>
        <SolidColorBrush x:Key="Player3Color" Color="#2ECC71"/>
        <SolidColorBrush x:Key="Player4Color" Color="#F1C40F"/>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#A52E3A4E" Margin="20,20,20,0" CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Border Background="#2E3A4E" BorderBrush="{StaticResource Player1Color}" BorderThickness="2" CornerRadius="25" Padding="15,8" Margin="10,0" MinWidth="150">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="{StaticResource Player1Color}"/>
                            <TextBlock Text="Hyelo" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#2E3A4E" BorderBrush="{StaticResource Player2Color}" BorderThickness="2" CornerRadius="25" Padding="15,8" Margin="10,0" MinWidth="150">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="{StaticResource Player2Color}"/>
                            <TextBlock Text="Puch" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#2E3A4E" BorderBrush="{StaticResource Player3Color}" BorderThickness="2" CornerRadius="25" Padding="15,8" Margin="10,0" MinWidth="150">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="{StaticResource Player3Color}"/>
                            <TextBlock Text="NoobMaster69" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#2E3A4E" BorderBrush="{StaticResource Player4Color}" BorderThickness="2" CornerRadius="25" Padding="15,8" Margin="10,0" MinWidth="150">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="{StaticResource Player4Color}"/>
                            <TextBlock Text="Xca Rodri" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#A52E3A4E" CornerRadius="15">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                    </Border.Effect>
                    <TextBlock Text="[ Game Board / Puzzle Area ]" Foreground="Gray" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <Border Background="#A52E3A4E" CornerRadius="15" Padding="20" Margin="0,0,0,10">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Lang.InGameLbTime}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <Viewbox Stretch="Uniform" Height="80">
                                <TextBlock Text="05:30" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold"/>
                            </Viewbox>
                        </StackPanel>
                    </Border>
                    <Border Background="#A52E3A4E" CornerRadius="15" Padding="20" Margin="0,10,0,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="Black" Opacity="0.4" BlurRadius="15"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="{x:Static lang:Lang.InGameLbScore}" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <Viewbox Stretch="Uniform" Height="80">
                                <TextBlock Text="560 pts" Foreground="{StaticResource PrimaryColor}" FontWeight="Bold"/>
                            </Viewbox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>