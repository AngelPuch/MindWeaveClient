<Page x:Class="MindWeaveClient.View.Authentication.PasswordRecoveryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MindWeaveClient.View.Authentication"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="760"
      Title="{x:Static lang:Lang.GlobalLbPasswordRecovery}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="AuthInputBoxStyle" TargetType="{x:Type Control}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Border x:Name="border" CornerRadius="10" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Width="400"
                MinHeight="550"
                Background="#CCFFFFFF" 
                CornerRadius="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="{x:Static lang:Lang.GlobalLbPasswordRecovery}" Foreground="#2c3e50" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25" TextWrapping="Wrap" TextAlignment="Center"/>

                <StackPanel Visibility="{Binding IsStep1Visible, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static lang:Lang.PasswordRecoveryLbUserEmail}" Foreground="#2c3e50" Margin="0,0,0,5"/>
                    <TextBox Style="{StaticResource AuthInputBoxStyle}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnSendCode}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,30,0,10" Command="{Binding SendCodeCommand}"/>
                </StackPanel>

                <StackPanel Visibility="{Binding IsStep2Visible, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static lang:Lang.PasswordRecoveryLbInstructions}" Foreground="#2c3e50" TextWrapping="Wrap" Margin="0,0,0,15" TextAlignment="Center"/>
                    <UniformGrid Columns="6" HorizontalAlignment="Center">
                        <TextBox MaxLength="1" Width="35" Height="45" Margin="3" TextAlignment="Center" FontSize="20" Style="{StaticResource AuthInputBoxStyle}"/>
                        <TextBox MaxLength="1" Width="35" Height="45" Margin="3" TextAlignment="Center" FontSize="20" Style="{StaticResource AuthInputBoxStyle}"/>
                        <TextBox MaxLength="1" Width="35" Height="45" Margin="3" TextAlignment="Center" FontSize="20" Style="{StaticResource AuthInputBoxStyle}"/>
                        <TextBox MaxLength="1" Width="35" Height="45" Margin="3" TextAlignment="Center" FontSize="20" Style="{StaticResource AuthInputBoxStyle}"/>
                        <TextBox MaxLength="1" Width="35" Height="45" Margin="3" TextAlignment="Center" FontSize="20" Style="{StaticResource AuthInputBoxStyle}"/>
                        <TextBox MaxLength="1" Width="35" Height="45" Margin="3" TextAlignment="Center" FontSize="20" Style="{StaticResource AuthInputBoxStyle}"/>
                    </UniformGrid>
                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnVerifyCode}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,20,0,0" Command="{Binding VerifyCodeCommand}"/>
                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnResend}" Style="{StaticResource LinkButtonStyle}" Margin="0,15,0,0" Command="{Binding ResendCodeCommand}"/>
                </StackPanel>

                <StackPanel Visibility="{Binding IsStep3Visible, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static lang:Lang.PasswordRecoveryLbSetNew}" Foreground="#2c3e50" Margin="0,0,0,10" FontSize="18" HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static lang:Lang.GlobalTxtNewPassword}" Foreground="#2c3e50" Margin="0,10,0,5"/>
                    <PasswordBox Style="{StaticResource AuthInputBoxStyle}"/>
                    <TextBlock Text="{x:Static lang:Lang.PasswordRecoveryLbConfirmPassword}" Foreground="#2c3e50" Margin="0,10,0,5"/>
                    <PasswordBox Style="{StaticResource AuthInputBoxStyle}"/>
                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnSave}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,20,0,0" Command="{Binding SavePasswordCommand}"/>
                </StackPanel>

                <Button Content="{x:Static lang:Lang.GlobalBtnBack}" Style="{StaticResource LinkButtonStyle}" Command="{Binding GoBackCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>