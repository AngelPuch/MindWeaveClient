<Page x:Class="MindWeaveClient.View.Authentication.PasswordRecoveryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MindWeaveClient.View.Authentication"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Authentication"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:PasswordRecoveryViewModel, IsDesignTimeCreatable=True}"
      d:DesignHeight="720" d:DesignWidth="760"
      Title="{x:Static lang:Lang.GlobalLbPasswordRecovery}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis" />
        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Width="400" MinHeight="450" Background="#CCFFFFFF" CornerRadius="25"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="{x:Static lang:Lang.GlobalLbPasswordRecovery}" Foreground="#2c3e50" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25" TextWrapping="Wrap" TextAlignment="Center"/>

                <StackPanel Visibility="{Binding IsStep1Visible, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static lang:Lang.GlobalLbEmail}" Foreground="#2c3e50" Margin="0,0,0,5"/>
                    <TextBox Style="{StaticResource AuthInputBoxStyle}" 
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"/>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" Text="{Binding Errors[Email][0]}"/>

                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnSendCode}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,30,0,10" Command="{Binding SendCodeCommand}"/>
                </StackPanel>

                <StackPanel Visibility="{Binding IsStep2Visible, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static lang:Lang.PasswordRecoveryLbInstructions}" Foreground="#2c3e50" TextWrapping="Wrap" Margin="0,0,0,15" TextAlignment="Center"/>
                    <TextBox Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                             Style="{StaticResource AuthInputBoxStyle}"
                             MaxLength="6"
                             FontSize="24"
                             TextAlignment="Center"
                             PreviewTextInput="CodeTextBox_PreviewTextInput"/>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" Text="{Binding Errors[VerificationCode][0]}" HorizontalAlignment="Center"/>

                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnVerifyCode}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,20,0,0" Command="{Binding VerifyCodeCommand}"/>
                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnResend}" Style="{StaticResource LinkButtonStyle}" Margin="0,15,0,0" Command="{Binding ResendCodeCommand}"/>
                </StackPanel>

                <StackPanel Visibility="{Binding IsStep3Visible, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static lang:Lang.PasswordRecoveryLbSetNew}" Foreground="#2c3e50" Margin="0,0,0,10" FontSize="18" HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static lang:Lang.GlobalTxtNewPassword}" Foreground="#2c3e50" Margin="0,10,0,5"/>
                    <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" Text="{Binding Errors[NewPassword][0]}"/>

                    <TextBlock Text="{x:Static lang:Lang.PasswordRecoveryLbConfirmPassword}" Foreground="#2c3e50" Margin="0,10,0,5"/>
                    <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" Text="{Binding Errors[ConfirmPassword][0]}"/>

                    <Button Content="{x:Static lang:Lang.PasswordRecoveryBtnSave}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,20,0,0" Command="{Binding SavePasswordCommand}"/>
                </StackPanel>

                <Button Content="{x:Static lang:Lang.GlobalBtnBack}" Style="{StaticResource LinkButtonStyle}" Command="{Binding GoBackCommand}" Margin="0,20,0,0"/>

                <Border Background="#88000000" CornerRadius="10" Margin="0,10,0,0"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                        HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="10">
                    <TextBlock Text="Processing..." Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>