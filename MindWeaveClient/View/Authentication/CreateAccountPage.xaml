<Page x:Class="MindWeaveClient.View.Authentication.CreateAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      xmlns:viewModel="clr-namespace:MindWeaveClient.ViewModel.Authentication"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="760"
      Title="CreateAccountPage"
      d:DataContext="{d:DesignInstance Type=viewModel:CreateAccountViewModel}">

    <Page.Resources>
        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="MinHeight" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Width="500"
                MaxHeight="700"
                Background="#CCFFFFFF" 
                CornerRadius="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                <StackPanel Margin="40,20">

                    <TextBlock Text="{x:Static language:Lang.SignUpLbNewAccount}" 
                               Foreground="#2c3e50" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="{x:Static language:Lang.GlobalLbFirstName}" 
                                       Foreground="#2c3e50" 
                                       Margin="0,0,0,5" />
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                     Style="{StaticResource AuthInputBoxStyle}"/>
                            <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                       Text="{Binding FirstNameError}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="{x:Static language:Lang.GlobalLbLastName}" 
                                       Foreground="#2c3e50" 
                                       Margin="0,0,0,5" />
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                     Style="{StaticResource AuthInputBoxStyle}"/>
                            <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                                       Text="{Binding LastNameError}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbUsername}" 
                               Foreground="#2c3e50" 
                               Margin="0,15,0,5"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                             Style="{StaticResource AuthInputBoxStyle}"/>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                               Text="{Binding UsernameError}"/>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbBirth}" 
                               Foreground="#2c3e50" 
                               Margin="0,15,0,5"/>
                    <DatePicker SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                Style="{StaticResource AuthDatePickerStyle}"/>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                               Text="{Binding BirthDateError}"/>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbGender}" 
                               Foreground="#2c3e50" 
                               Margin="0,15,0,5"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Left" 
                                Margin="0,5,0,0">
                        <RadioButton GroupName="GenderGroup" 
                                     Content="{x:Static language:Lang.SignUpRbFemale}" 
                                     Foreground="#2c3e50" 
                                     Margin="5" 
                                     IsChecked="{Binding IsFemale, UpdateSourceTrigger=PropertyChanged}"/>
                        <RadioButton GroupName="GenderGroup" 
                                     Content="{x:Static language:Lang.SignUpRbMale}" 
                                     Foreground="#2c3e50" 
                                     Margin="5" 
                                     IsChecked="{Binding IsMale, UpdateSourceTrigger=PropertyChanged}"/>
                        <RadioButton GroupName="GenderGroup" 
                                     Content="{x:Static language:Lang.SignUpRbOther}" 
                                     Foreground="#2c3e50" 
                                     Margin="5" 
                                     IsChecked="{Binding IsOther, UpdateSourceTrigger=PropertyChanged}"/>
                        <RadioButton GroupName="GenderGroup" 
                                     Content="{x:Static language:Lang.SignUpRbNoSay}" 
                                     Foreground="#2c3e50" 
                                     Margin="5" 
                                     IsChecked="{Binding IsPreferNotToSay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                               Text="{Binding GenderError}"/>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbEmail}" 
                               Foreground="#2c3e50" 
                               Margin="0,15,0,5"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                             Style="{StaticResource AuthInputBoxStyle}"/>
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                               Text="{Binding EmailError}"/>

                    <TextBlock Text="{x:Static language:Lang.GlobalTxtNewPassword}" 
                               Foreground="#2c3e50" 
                               Margin="0,15,0,5"/>
                    <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />
                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                               Text="{Binding PasswordError}"/>

                    <Button Command="{Binding SignUpCommand}"
                            Content="{x:Static language:Lang.GlobalBtnSignUp}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,30,0,0"/>

                    <Button Command="{Binding GoToLoginCommand}"
                            Content="{x:Static language:Lang.SignUpLbAlreadyAccount}"
                            Style="{StaticResource LinkButtonStyle}"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>