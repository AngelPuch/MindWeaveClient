<Page x:Class="MindWeaveClient.View.Authentication.CreateAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="760"
      Title="CreateAccountPage">

    <Grid>

        <Border Width="500"
                MaxHeight="700"
                Background="#CCFFFFFF" 
                CornerRadius="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                <StackPanel Margin="40,25">

                    <TextBlock Text="{x:Static language:Lang.SignUpLbNewAccount}" Foreground="#2c3e50" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="{x:Static language:Lang.GlobalLbFirstName}" Foreground="#2c3e50" Margin="0,0,0,5" />
                            <TextBox x:Name="txtFirstName" Text="{Binding firstName}" Style="{StaticResource AuthInputBoxStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="{x:Static language:Lang.GlobalLbLastName}" Foreground="#2c3e50" Margin="0,0,0,5" />
                            <TextBox x:Name="txtLastName" Text="{Binding lastName}" Style="{StaticResource AuthInputBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbUsername}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtUsername" Text="{Binding username}" Style="{StaticResource AuthInputBoxStyle}"/>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbBirth}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                    <DatePicker x:Name="dpBirthDate" 
                                SelectedDate="{Binding birthDate}"
                                Style="{StaticResource AuthDatePickerStyle}"/>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbGender}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
                        <RadioButton x:Name="rbFemale" GroupName="GenderGroup" Content="{x:Static language:Lang.SignUpRbFemale}" Foreground="#2c3e50" Margin="5" IsChecked="{Binding isFemale}"/>
                        <RadioButton x:Name="rbMale" GroupName="GenderGroup" Content="{x:Static language:Lang.SignUpRbMale}" Foreground="#2c3e50" Margin="5" IsChecked="{Binding isMale}"/>
                        <RadioButton x:Name="rbOther" GroupName="GenderGroup" Content="{x:Static language:Lang.SignUpRbOther}" Foreground="#2c3e50" Margin="5" IsChecked="{Binding isOther}"/>
                        <RadioButton x:Name="rbPreferNotToSay" GroupName="GenderGroup" Content="{x:Static language:Lang.SignUpRbNoSay}" Foreground="#2c3e50" Margin="5" IsChecked="{Binding isPreferNotToSay}"/>
                    </StackPanel>

                    <TextBlock Text="{x:Static language:Lang.GlobalLbEmail}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtEmail" Text="{Binding email}" Style="{StaticResource AuthInputBoxStyle}"/>

                    <TextBlock Text="{x:Static language:Lang.GlobalTxtNewPassword}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="pbPassword" helpers:PasswordBoxHelper.BoundPassword="{Binding password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Button x:Name="btnSignUp" 
                            Command="{Binding signUpCommand}"
                            Content="{x:Static language:Lang.GlobalBtnSignUp}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,30,0,0"/>

                    <Button x:Name="btnGoToLogin"
                            Command="{Binding goToLoginCommand}"
                            Content="{x:Static language:Lang.SignUpLbAlreadyAccount}"
                            Style="{StaticResource LinkButtonStyle}"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>