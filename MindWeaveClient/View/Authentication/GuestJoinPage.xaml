<Page x:Class="MindWeaveClient.View.Authentication.GuestJoinPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:lang="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      xmlns:vm="clr-namespace:MindWeaveClient.ViewModel.Authentication"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance Type=vm:GuestJoinViewModel, IsDesignTimeCreatable=True}"
      d:DesignHeight="720" d:DesignWidth="760"
      Title="{x:Static lang:Lang.GuestJoinTitle}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="MinHeight" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Width="450" 
                MinHeight="480" 
                Background="#CCFFFFFF" 
                CornerRadius="25"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  ShadowDepth="0" 
                                  BlurRadius="30" 
                                  Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <!-- Título -->
                <TextBlock Text="{x:Static lang:Lang.GuestJoinTitle}" 
                           Foreground="#2c3e50" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,15" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"/>

                <!-- Información -->
                <TextBlock Text="{x:Static lang:Lang.GuestJoinInfo}" 
                           Foreground="#34495e" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,20" 
                           TextAlignment="Center"/>

                <!-- Lobby Code -->
                <TextBlock Text="{x:Static lang:Lang.GuestJoinLbLobbyCode}" 
                           Foreground="#2c3e50" 
                           Margin="0,10,0,5"/>
                <TextBox Text="{Binding LobbyCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                         Style="{StaticResource AuthInputBoxStyle}"
                         MaxLength="6"
                         FontSize="20"
                         TextAlignment="Center"/>
                <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                           Text="{Binding LobbyCodeError}" 
                           HorizontalAlignment="Center"/>

                <!-- Guest Email -->
                <TextBlock Text="{x:Static lang:Lang.GlobalLbEmail}" 
                           Foreground="#2c3e50" 
                           Margin="0,15,0,5"/>
                <TextBox Text="{Binding GuestEmail, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource AuthInputBoxStyle}"/>
                <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                           Text="{Binding GuestEmailError}"/>

                <!-- Desired Username -->
                <TextBlock Text="{x:Static lang:Lang.GuestJoinLbDesiredUsername}" 
                           Foreground="#2c3e50" 
                           Margin="0,15,0,5"/>
                <TextBox Text="{Binding DesiredUsername, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource AuthInputBoxStyle}" 
                         MaxLength="16"/>
                <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}" 
                           Text="{Binding DesiredUsernameError}"/>

                <!-- Botón Join -->
                <Button Command="{Binding JoinAsGuestCommand}" 
                        Content="{x:Static lang:Lang.GuestJoinBtnJoin}" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="0,30,0,10" />

                <!-- Botón Back -->
                <Button Command="{Binding GoBackCommand}" 
                        Content="{x:Static lang:Lang.GlobalBtnBack}" 
                        Style="{StaticResource LinkButtonStyle}" />

                <!-- Indicador de Busy -->
                <Border Background="#88000000" 
                        CornerRadius="10" 
                        Margin="0,10,0,0"
                        Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Center" 
                        Padding="10">
                    <TextBlock Text="{x:Static lang:Lang.GlobalProcessing}" 
                               Foreground="White" 
                               FontSize="14" 
                               HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>