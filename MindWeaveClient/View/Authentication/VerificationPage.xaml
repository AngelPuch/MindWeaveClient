<Page x:Class="MindWeaveClient.View.Authentication.VerificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="760"
      Title="Account Verification">
    <Grid>
        <Border Width="400" MinHeight="450" Background="#CCFFFFFF" CornerRadius="25"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="{x:Static language:Lang.VerificationAccountLbTitle}" Foreground="#2c3e50" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBlock Text="{x:Static language:Lang.VerificationAccountLbInstructions}" Foreground="#2c3e50" TextWrapping="Wrap" Margin="0,0,0,25" TextAlignment="Center"/>

                <TextBox Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource AuthInputBoxStyle}" MaxLength="6" FontSize="24" TextAlignment="Center"/>

                <Button Command="{Binding VerifyCommand}" Content="{x:Static language:Lang.VerificationAccountBtnVerify}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,30,0,10" />

                <Button Command="{Binding GoBackCommand}" Content="{x:Static language:Lang.GlobalBtnBack}" Style="{StaticResource LinkButtonStyle}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>