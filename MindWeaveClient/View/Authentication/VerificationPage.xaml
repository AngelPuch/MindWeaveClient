<Page x:Class="MindWeaveClient.View.Authentication.VerificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:viewModel="clr-namespace:MindWeaveClient.ViewModel.Authentication"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="760"
      Title="Account Verification"
      d:DataContext="{d:DesignInstance Type=viewModel:VerificationViewModel}">

    <Page.Resources>
        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Width="400" MinHeight="450" Background="#CCFFFFFF" CornerRadius="25"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="{x:Static language:Lang.VerificationAccountLbTitle}" Foreground="#2c3e50" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBlock Text="{x:Static language:Lang.VerificationAccountLbInstructions}" Foreground="#2c3e50" TextWrapping="Wrap" Margin="0,0,0,25" TextAlignment="Center"/>

                <TextBox Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource AuthInputBoxStyle}" 
                         MaxLength="6" 
                         FontSize="24" 
                         TextAlignment="Center"
                         PreviewTextInput="CodeTextBox_PreviewTextInput"/>

                <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}"
                           Text="{Binding Errors[VerificationCode][0]}"
                           HorizontalAlignment="Center"/>

                <Button Command="{Binding VerifyCommand}" Content="{x:Static language:Lang.VerificationAccountBtnVerify}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,30,0,10" />

                <Button Content="{x:Static language:Lang.VerificationCodeResend}" Style="{StaticResource LinkButtonStyle}" Command="{Binding ResendCodeCommand}" />

                <Button Command="{Binding GoBackCommand}" Content="{x:Static language:Lang.GlobalBtnBack}" Style="{StaticResource LinkButtonStyle}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>