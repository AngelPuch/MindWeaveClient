<Page x:Class="MindWeaveClient.View.Authentication.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      xmlns:viewModel="clr-namespace:MindWeaveClient.ViewModel.Authentication"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="760"
      Title="LoginPage"
      d:DataContext="{d:DesignInstance Type=viewModel:LoginViewModel}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="MinHeight" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Width="400"
                MinHeight="550"
                Background="#CCFFFFFF"
                CornerRadius="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  ShadowDepth="0"
                                  BlurRadius="30"
                                  Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="{x:Static language:Lang.GlobalLbGameName}"
                           Foreground="#2c3e50"
                           FontSize="52"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <StackPanel Visibility="{Binding ShowUnverifiedControls, Converter={StaticResource InverseBoolToVis}}">

                    <TextBlock Text="{x:Static language:Lang.GlobalLbEmail}"
                               Foreground="#2c3e50"
                               Margin="0,0,0,5"/>

                    <TextBox Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                             Style="{StaticResource AuthInputBoxStyle}"/>

                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}"
                               Text="{Binding EmailError}"/>

                    <TextBlock Text="{x:Static language:Lang.LogInLbPassword}"
                               Foreground="#2c3e50"
                               Margin="0,15,0,5"/>

                    <Grid>
                        <PasswordBox x:Name="pbPassword"
                                     helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                                     Visibility="{Binding ElementName=ToggleShowPass, Path=IsChecked, Converter={StaticResource InverseBoolToVis}}"/>

                        <TextBox x:Name="txtVisiblePassword"
                                 Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource AuthInputBoxStyle}"
                                 Visibility="{Binding ElementName=ToggleShowPass, Path=IsChecked, Converter={StaticResource BoolToVis}}"/>

                        <ToggleButton x:Name="ToggleShowPass"
                                      Click="ToggleShowPass_OnClick"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0"
                                      Width="24" Height="24"
                                      Background="Transparent"
                                      BorderThickness="0">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid Background="Transparent">
                                                    <Path Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"
                                                          Fill="#2c3e50"
                                                          Stretch="Uniform"
                                                          Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource InverseBoolToVis}}"/>

                                                    <Path Data="M11.83,9L15,12.16C15,12.11 15,12.05 15,12A3,3 0 0,0 12,9C11.94,9 11.89,9 11.83,9M7.53,9.8L9.08,11.35C9.03,11.56 9,11.77 9,12A3,3 0 0,0 12,15C12.22,15 12.44,14.97 12.65,14.92L14.2,16.47C13.53,16.8 12.79,17 12,17A5,5 0 0,1 7,12C7,11.21 7.2,10.47 7.53,9.8M2,4.27L4.28,6.55L4.73,7C3.08,8.3 1.78,10 1,12C2.73,16.39 7,19.5 12,19.5C13.55,19.5 15.03,19.2 16.38,18.66L16.81,19.08L19.73,22L21,20.73L3.27,3M12,7A5,5 0 0,1 17,12C17,12.64 16.87,13.26 16.64,13.82L19.57,16.75C21.07,15.5 22.27,13.86 23,12C21.27,7.61 17,4.5 12,4.5C10.6,4.5 9.27,4.75 8,5.2L10.17,7.35C10.74,7.13 11.35,7 12,7Z"
                                                          Fill="#7f8c8d"
                                                          Stretch="Uniform"
                                                          Visibility="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVis}}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </Grid>

                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}"
                               Text="{Binding PasswordError}"/>

                    <Button Command="{Binding LoginCommand}"
                            Content="{x:Static language:Lang.LogInBtnLogin}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,30,0,0"/>

                    <Button Command="{Binding ForgotPasswordCommand}"
                            Content="{x:Static language:Lang.LogInBtnRecover}"
                            Style="{StaticResource LinkButtonStyle}"/>
                </StackPanel>

                <StackPanel Margin="0,15,0,0"
                            Visibility="{Binding ShowUnverifiedControls, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static language:Lang.LoginAccountNotVerified}"
                               Foreground="#e74c3c"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               FontWeight="SemiBold"
                               FontSize="14"/>

                    <Button Command="{Binding ResendVerificationCommand}"
                            Content="{x:Static language:Lang.VerificationCodeResend}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,20,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,25,0,0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Command="{Binding SignUpCommand}"
                            Content="{x:Static language:Lang.GlobalBtnSignUp}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="140"
                            Margin="0,0,10,0"/>

                    <Button Command="{Binding GuestLoginCommand}"
                            Content="{x:Static language:Lang.LoginBtnGuest}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="140"/>
                </StackPanel>

                <Button Command="{Binding ExitCommand}"
                        Content="{x:Static language:Lang.GlobalBtnExit}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Background="#e74c3c"
                        Foreground="White"
                        Margin="0,15,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>