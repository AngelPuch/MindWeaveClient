<Page x:Class="MindWeaveClient.View.Authentication.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="760"
      Title="LoginPage">

    <Page.Resources>
        <Style x:Key="AuthInputBoxStyle" TargetType="{x:Type Control}">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#22FFFFFF"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Border x:Name="border" CornerRadius="10" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
       
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Width="400"
                Height="550"
                Background="#CCFFFFFF" 
                CornerRadius="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="30" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="{x:Static language:Lang.GlobalLbGameName}" Foreground="#2c3e50" FontSize="52" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <TextBlock Text="{x:Static language:Lang.GlobalLbEmail}" Foreground="#2c3e50" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Text="{Binding Email}" Style="{StaticResource AuthInputBoxStyle}"/>

                <TextBlock Text="{x:Static language:Lang.LogInLbPassword}" Foreground="#2c3e50" Margin="0,15,0,5"/>
                <PasswordBox x:Name="pbPassword" Style="{StaticResource AuthInputBoxStyle}"/>

                <Button x:Name="btnLogin" 
                        Command="{Binding LoginCommand}"
                        Content="{x:Static language:Lang.LogInBtnLogin}" 
                        Style="{StaticResource PrimaryButtonStyle}" Margin="0,30,0,0"/>

                <Button x:Name="btnForgotPassword"
                        Command="{Binding ForgotPasswordCommand}"
                        Content="{x:Static language:Lang.LogInBtnRecover}"
                        Style="{StaticResource LinkButtonStyle}"/>

                <StackPanel Margin="0,25,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnSignUp"
                            Command="{Binding SignUpCommand}"
                            Content="{x:Static language:Lang.GlobalBtnSignUp}"
                            Style="{StaticResource SecondaryButtonStyle}" Width="140"
                            Margin="0,0,10,0"/>

                    <Button x:Name="btnGuestLogin"
                            Command="{Binding GuestLoginCommand}"
                            Content="{x:Static language:Lang.LoginBtnGuest}"
                            Style="{StaticResource SecondaryButtonStyle}" Width="140"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>