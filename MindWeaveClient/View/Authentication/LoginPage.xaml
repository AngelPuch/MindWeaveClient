<Page x:Class="MindWeaveClient.View.Authentication.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:language="clr-namespace:MindWeaveClient.Properties.Langs"
      xmlns:helpers="clr-namespace:MindWeaveClient.Helpers"
      xmlns:viewModel="clr-namespace:MindWeaveClient.ViewModel.Authentication"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="760"
      Title="LoginPage"
      d:DataContext="{d:DesignInstance Type=viewModel:LoginViewModel}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

        <Style x:Key="ValidationErrorTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e74c3c"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="MinHeight" Value="15"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Width="400"
                MinHeight="550"
                Background="#CCFFFFFF"
                CornerRadius="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  ShadowDepth="0"
                                  BlurRadius="30"
                                  Opacity="0.6"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="{x:Static language:Lang.GlobalLbGameName}"
                           Foreground="#2c3e50"
                           FontSize="52"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <StackPanel Visibility="{Binding ShowUnverifiedControls, Converter={StaticResource InverseBoolToVis}}">

                    <!-- Email -->
                    <TextBlock Text="{x:Static language:Lang.GlobalLbEmail}"
                               Foreground="#2c3e50"
                               Margin="0,0,0,5"/>

                    <TextBox Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                             Style="{StaticResource AuthInputBoxStyle}"/>

                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}"
                               Text="{Binding EmailError}"/>

                    <!-- Password -->
                    <TextBlock Text="{x:Static language:Lang.LogInLbPassword}"
                               Foreground="#2c3e50"
                               Margin="0,15,0,5"/>

                    <PasswordBox helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}" />

                    <TextBlock Style="{StaticResource ValidationErrorTextBlockStyle}"
                               Text="{Binding PasswordError}"/>

                    <!-- Botones principales -->
                    <Button Command="{Binding LoginCommand}"
                            Content="{x:Static language:Lang.LogInBtnLogin}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,30,0,0"/>

                    <Button Command="{Binding ForgotPasswordCommand}"
                            Content="{x:Static language:Lang.LogInBtnRecover}"
                            Style="{StaticResource LinkButtonStyle}"/>
                </StackPanel>

                <!-- Panel de cuenta no verificada -->
                <StackPanel Margin="0,15,0,0"
                            Visibility="{Binding ShowUnverifiedControls, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{x:Static language:Lang.LoginAccountNotVerified}"
                               Foreground="#e74c3c"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               FontWeight="SemiBold"
                               FontSize="14"/>

                    <Button Command="{Binding ResendVerificationCommand}"
                            Content="{x:Static language:Lang.VerificationCodeResend}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,20,0,0"/>
                </StackPanel>

                <!-- Botones secundarios -->
                <StackPanel Margin="0,25,0,0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Command="{Binding SignUpCommand}"
                            Content="{x:Static language:Lang.GlobalBtnSignUp}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="140"
                            Margin="0,0,10,0"/>

                    <Button Command="{Binding GuestLoginCommand}"
                            Content="{x:Static language:Lang.LoginBtnGuest}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="140"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>